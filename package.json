{
  "name": "leetcode-torture",
  "displayName": "Leetcode torture",
  "version": "0.0.1",
  "description": "An extension to torture you with LeetCode problems and force you to solve them.",
  "author": "The Coding Sloth",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "dev-firefox": "plasmo dev --target=firefox-mv3",
    "build-firefox": "plasmo build --target=firefox-mv3",
    "test": "plasmo test",
    "web-scrape-tests": "jest --runInBand"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.3",
    "plasmo": "0.85.2",
    "puppeteer": "^22.6.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.2.1",
    "@types/chrome": "0.0.265",
    "@types/node": "20.12.5",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "prettier": "3.2.5",
    "typescript": "5.4.4"
  },
  "manifest": {
    "browser_specific_settings": {
      "gecko": {
        "id": "{743ff2c1-74c2-4384-a218-2c33d6a765a5}"
      }
    },
    "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "storage",
      "tabs",
      "activeTab",
      "alarms",
      "webRequest"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "leetcode-problems/*"
        ],
        "matches": [
          "https://www.plasmo.com/*"
        ]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}